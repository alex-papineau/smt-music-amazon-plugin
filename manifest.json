{
    "manifest_version": 3,
    "name": "SMT IV: Amazon Edition",
    "description": "Plays the 'Black Market' theme from Shin Megami Tensei IV while you shop on Amazon.\n'You HAD to come now, didn't you?'",
    "version": "3.0.0",
    "icons": {
        "16": "assets/smirk.png",
        "48": "assets/smirk.png",
        "128": "assets/smirk.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none'; media-src 'self' https://alex-papineau.github.io;"
    },
    "permissions": [
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://*.amazon.com/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.it/*",
        "https://*.amazon.es/*",
        "https://*.amazon.co.jp/*",
        "https://alex-papineau.github.io/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "assets/smirk.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.amazon.com/*",
                "https://*.amazon.ca/*",
                "https://*.amazon.co.uk/*",
                "https://*.amazon.de/*",
                "https://*.amazon.fr/*",
                "https://*.amazon.it/*",
                "https://*.amazon.es/*",
                "https://*.amazon.co.jp/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "offscreen/offscreen.html",
                "assets/*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "smt4-amazon-edition@example.com",
            "strict_min_version": "109.0"
        }
    }
}